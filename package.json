{
  "name": "scss-helper",
  "version": "4.0.0",
  "description": "A remarkable SCSS/CSS utility toolkit â€” fills the gaps in Tailwind CSS v3/v4 and pure-SCSS projects with design tokens, fluid typography, container queries, dark mode, and more.",
  "main": "index.scss",
  "exports": {
    ".": "./index.scss",
    "./css": "./dist/style.css",
    "./css/grid": "./dist/only-css-grid.css",
    "./css/tokens": "./dist/tokens.css",
    "./plugin": "./plugin.js"
  },
  "files": [
    "src/",
    "dist/",
    "index.scss",
    "plugin.js",
    "postcss.config.js"
  ],
  "peerDependencies": {
    "sass": ">=1.60.0",
    "tailwindcss": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": true
    }
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.0",
    "sass": "^1.85.1"
  },
  "scripts": {
    "build": "pnpm build:tokens && pnpm build:css && pnpm build:grid",
    "build:css": "sass src/style.scss dist/style.css --style=compressed --no-source-map --silence-deprecation=import,global-builtin,if-function && postcss dist/style.css --replace",
    "build:grid": "sass src/only-css-grid.scss dist/only-css-grid.css --style=compressed --no-source-map --silence-deprecation=import,global-builtin && postcss dist/only-css-grid.css --replace",
    "build:tokens": "sass src/tokens/_index.scss dist/tokens.css --style=compressed --no-source-map --silence-deprecation=import,global-builtin && postcss dist/tokens.css --replace",
    "build:dev": "sass src/style.scss dist/style.css --style=expanded --silence-deprecation=import,global-builtin,if-function && sass src/only-css-grid.scss dist/only-css-grid.css --style=expanded --silence-deprecation=import,global-builtin && sass src/tokens/_index.scss dist/tokens.css --style=expanded --silence-deprecation=import,global-builtin",
    "watch": "sass --watch src/style.scss:dist/style.css src/only-css-grid.scss:dist/only-css-grid.css src/tokens/_index.scss:dist/tokens.css --silence-deprecation=import,global-builtin,if-function"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pooyagolchian/scss-helper.git"
  },
  "author": "Pooya Golchian <pooya.golchian@gmail.com> (https://pooya.blog)",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "bugs": {
    "url": "https://github.com/pooyagolchian/scss-helper/issues"
  },
  "homepage": "https://pooya.blog/scss-helper/",
  "pnpm": {
    "overrides": {
      "vite": "^8.0.0-beta.13"
    }
  },
  "keywords": [
    "scss",
    "css",
    "utilities",
    "helper",
    "tailwind",
    "tailwindcss",
    "design-tokens",
    "css-grid",
    "flexbox",
    "dark-mode",
    "container-queries",
    "fluid-typography",
    "spacing",
    "animations",
    "scss-helper"
  ]
}
